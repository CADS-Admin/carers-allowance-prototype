---
layout:  v3_wide_template
---

<% 
    answered    = req.params["currentPage"].to_i - 1
    percentage  = ((req.params["currentPage"].to_i - 1) * 100 / data.claim.totalQuestions).round()
%>

<% if answered == data.claim.totalQuestions %>

<h1 class="heading-36">
    Now submit your application
</h1>

<p>Check your answers below before submitting your application.</p>

<% else %>

<h1 class="heading-36">
    Your application is <%= percentage %>% complete
</h1>

<!--<p>You've answered 3 questions and skipped 1 question.</p>-->

<p> <%= pluralize(answered, 'question') %> answered.</p>


<% end %>

<p><a href="<%= req.params["currentPage"] %>.html">Back</a></p>


