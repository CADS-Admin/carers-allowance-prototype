<script type="text/javascript">
//

$(document).ready(function() {  

	function checkSuccess() {
		if($('#live_inYes').is(':checked') && $('#16_overYes').is(':checked') && $('#benefit_typeYes').is(':checked') && $('#35_hoursYes').is(':checked')) { 
		 	//alert('success');
			$("a.next.button").show();
			$("a.finish.button").hide();
			$("#success").show();
			$("#failure, #legal").hide();	
		}
		else if($('#live_inNo').is(':checked') || $('#16_overNo').is(':checked') || $('#benefit_typeNo').is(':checked') || $('#35_hoursNo').is(':checked')) {
			$("a.next.button").hide();
			$("a.finish.button").show();
			$("#success").hide();
			$("#failure, #legal").show();
		}
	}	
	$('#35_hoursNo').click(function(){
		checkSuccess();
		$("#failure .feedback-q1").show();
	});
	$('#benefit_typeNo').click(function(){
		checkSuccess();
		$("#failure .feedback-q2").show();
	});
	$('#16_overNo').click(function(){
		checkSuccess();
		$("#failure .feedback-q3").show();
	});
	$('#live_inNo').click(function(){
		checkSuccess();
		$("#failure .feedback-q4").show();
	});	
	$('#35_hoursYes').click(function(){
		checkSuccess();
		$("#failure .feedback-q1").hide();
	});
	$('#benefit_typeYes').click(function(){
		checkSuccess();
		$("#failure .feedback-q2").hide();
	})
	$('#16_overYes').click(function(){
		checkSuccess();
		$("#failure .feedback-q3").hide();
	});
	$('#live_inYes').click(function(){
		checkSuccess();
		$("#failure .feedback-q4").hide();
	});

});

</script>



