<script>

// Show & Hide Fields

$(document).ready(function() {  
$('#how-often-paid').change(function(){
	$('.other-detail').hide();
	$('.other-questions').hide();
	
	if ($(this).val() == 'other') {
		$(this).parents().next('.other-detail').show();	
	}
	if ($(this).val() == 'weekly') {
		$('.other-questions').show();
		$('#same-amount-label').text("Do you usually get the same amount each week?");
		$('#when-helper').text("For example, every Friday");
	}
	if ($(this).val() == 'fortnightly') {
		$('.other-questions').show();
		$('#same-amount-label').text("Do you usually get the same amount each fortnight?");
		$('#when-helper').text("For example, every second Thursday");
	}
	if ($(this).val() == 'fourWeekly') {
		$('.other-questions').show();
		$('#same-amount-label').text("Do you usually get the same amount each time?");
		$('#when-helper').text("For example, every fourth Thursday");
	}
	if ($(this).val() == 'monthly') {
		$('.other-questions').show();
		$('#same-amount-label').text("Do you usually get the same amount each month?");
		$('#when-helper').text("For example, the last day of the month");
	}
	
});

});

</script>