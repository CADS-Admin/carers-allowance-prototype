title: Your partner's details
---

<%= partial "partials/page-title" %>

<form class="form" id="form" name="data">

<!-- Back, Skip -->    

    <%= partial "partials/back-skip" %>

<!-- Living with partner? -->

    <h2 class="section-heading">Have you had a partner or spouse living with you since your claim date?</h2>

    <p class="form-hint">Your claim date is <%= partial "partials/claim-date" %>. If you have separated since then select 'Yes'.</p>

    <%= partial 'partials/questions/yes-no', :locals => { :id => 'partner', yesToggle: '#yesToggle'} %>

<div class="js-hidden form-group form-group-indent" id="yesToggle">

<!-- Name -->

    <h2 class="section-heading">Full name</h2>
    
    <p class="form-hint">
        Enter as shown on their birth certificate or passport    
    </p>

    <%= partial 'partials/questions/text-field', :locals => { 
        :id => 'partnerName',
        :hideLabel  => true
    }%>
    
<!-- National Insurance number -->

    <h2 class="section-heading">National Insurance number</h2>

    <p class="form-hint">
        For example, 'VO 12 34 56 D'
    </p>

    <%= partial "partials/questions/text-field", :locals => { 
        :id         => "partnerNino",
        :label      => "National Insurance number",
        :hideLabel  => true,
        :classes    => "form-control-1-2"
    }%>
    
    
<!-- Nationality -->

    <h2 class="section-heading">Nationality</h2>

	<p class="form-hint">If they have a current passport, enter as shown on their passport</p>

    <%= partial "partials/questions/text-field", :locals => { 
        :id 		=> "partnerNationality",
        :label 		=> "Nationality",
        :hideLabel	=> true
    }%>
   
 
<!-- Date of birth -->

    <h2 class="section-heading">Date of birth</h2>

    <%= partial 'partials/questions/date', :locals => { :id => 'partnerDob', :hint => 'For example, 20 03 1976'} %>


<!-- Living with partner? -->

    <h2 class="section-heading">Have you separated since your claim date?</h2>

    <p class="form-hint">Your claim date is <%= partial "partials/claim-date" %>. If you have separated since then select 'Yes'.</p>

    <%= partial 'partials/questions/yes-no', :locals => { :id => 'partnerSeparated'} %>


<!-- State Pension -->

    <h2 class="section-heading">Is this the person you are claiming Carer's Allowance for?</h2>

    <%= partial 'partials/questions/yes-no', :locals => { :id => 'caringPartner'} %>
   
</div> 

    <div class-"form-group">

        <%= partial "partials/next-question" %>

    </div>
</form>