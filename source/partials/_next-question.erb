<%

if current_page.data.question == data.claim.totalQuestions
	# User is on the last question
	buttonText = 'Check your answers'
	href = 'check-answers'

else
	buttonText = 'Go to next question'
	href = (current_page.data.question + 1).to_s

end
%>

<div class="form-group">
       <br><br>
    <a class="next button" data-answer="<%= current_page.data.question %>" href="<%= href %>"><%= buttonText %></a>
</div>

