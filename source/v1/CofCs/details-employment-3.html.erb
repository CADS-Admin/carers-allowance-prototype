<script>

// Show & Hide Fields

$(document).ready(function() {  
	$('#how-often-paid').change(function(){
		$('.other-questions').hide();
		
		if ($(this).val() == 'other') {
			$(this).parents().next('.other-detail').show('medium');	
		}
		if ($(this).val() == 'weekly') {
			$('.other-questions').show('medium');
			$('#same-amount-label').text("Are you expecting to be paid the same amount each week?");
			//$('#when-helper').text("For example, every Friday");
		}
		if ($(this).val() == 'fortnightly') {
			$('.other-questions').show('medium');
			$('#same-amount-label').text("Are you expecting to be paid the same amount each fortnight?");
			//$('#when-helper').text("For example, every second Thursday");
		}
		if ($(this).val() == 'fourWeekly') {
			$('.other-questions').show('medium');
			$('#same-amount-label').text("Are you expecting to be paid the same amount each time?");
			//$('#when-helper').text("For example, every fourth Thursday");
		}
		if ($(this).val() == 'monthly') {
			$('.other-questions').show('medium');
			$('#same-amount-label').text("Are you expecting to be paid the same amount each month?");
			//$('#when-helper').text("For example, the last day of the month");
		}	
	});
	
	$('#dont-know').click(function(){
		$('#dont-know-help').show();
	});
	
	// dont-know
	// dont-know-helper
	
});

</script>